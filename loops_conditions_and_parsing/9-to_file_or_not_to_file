#!/usr/bin/env bash
#This script will display information about the school file.

file="school"

if [[ -e "$file" ]]; then
    if [[ -f "$file" ]]; then
        echo "$file exists and is a regular file"

        if [[ -s "$file" ]]; then
            echo "$file is not empty"
        else
            echo "$file is empty"
        fi
    elif [[ -d "$file" ]]; then
        echo "$file exists but it's a directory"
    fi
else
    echo "$file does not exist"
fi

