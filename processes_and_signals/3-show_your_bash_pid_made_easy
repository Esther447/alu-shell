#!/usr/bin/env bash
# This script displays the PID and process name of processes whose name contains "bash"
for pid in /proc/[0-9]*; do
    if [[ -f "$pid/comm" ]]; then
        process_name=$(cat "$pid/comm")
        if [[ "$process_name" == *bash* ]]; then
            echo "PID: ${pid#/proc/}, Process Name: $process_name"
        fi
    fi
done
